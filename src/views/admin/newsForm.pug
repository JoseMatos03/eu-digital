extends ../layouts/layout

block content
  .container
  .container
  h2= title
  form.form.form(method="post", action="/api/admin/news", data-ajax, data-redirect="/admin/news")
    div
      label Títul.resource-li.resource-item.cardsto
      input.form-control(type="text", name="title", value=news.title||'')
    div
      label Conteúdo
      textarea.nav-link(name="content")= news.content||''
    div
      label Visível?
      input.form-control(type="checkbox", name="visible", checked=news.visible)
    button.btn(type="submit") Guardar