extends ../layouts/layout

block content
  h2= title
  a(href="/admin/users/create") ➕ Criar novo utilizador
  table
    thead
      tr
        th Username
        th Email
        th Role
        th Ações
    tbody
      each u in users
        tr
          td= u.username
          td= u.email
          td= u.role
          td
            a(href=`/admin/users/${u._id}`) Editar
            form(data-ajax method="post", action=`/api/admin/users/${u._id}`, style="display:inline")
              input(type="hidden", name="_method", value="DELETE")
              button(type="submit") 🗑️
